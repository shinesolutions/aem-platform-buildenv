{
  "variables": {
    "timezone" : null,
    "version": null,
    "image_name": null,
    "repository": null
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:centos7",
      "commit": true,
      "run_command": [
        "--privileged",
        "-e",
        "container=docker",
        "-v",
        "/sys/fs/cgroup:/sys/fs/cgroup",
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/usr/bin/bash"
      ],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV TZ {{user `timezone`}}",
        "ENV PATH /opt/puppetlabs/puppet/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
        "EXPOSE 4502 4503 5432 5433"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioners/puppet.sh"
    },
    {
      "type": "puppet-masterless",
      "prevent_sudo": true,
      "puppet_bin_dir": "/opt/puppetlabs/bin/",
      "hiera_config_path": "conf/hiera.yaml",
      "extra_arguments": "--debug",
      "staging_directory": "/tmp/{{user `image_name`}}/",
      "manifest_file": "provisioners/{{user `image_name`}}.pp",
      "module_paths": [
        "modules",
        "modules-extra"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "{{user `repository`}}/{{user `image_name`}}",
      "tag": "latest",
      "only": [
        "docker"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "{{user `repository`}}/{{user `image_name`}}",
      "tag": "{{user `version`}}",
      "only": [
        "docker"
      ]
    }
  ]
}
